<odoo>

    
    <record id="view_exam_report_list" model="ir.ui.view">
        <field name="name">school.exam.report.list</field>
        <field name="model">school.exam.report</field>
        <field name="arch" type="xml">
            <list string="Exam Reports">
                <field name="student_id"/>
                <field name="exam_id"/>
                <field name="average_score"/>
            </list>
        </field>
    </record>

    
    <record id="view_exam_report_form" model="ir.ui.view">
        <field name="name">school.exam.report.form</field>
        <field name="model">school.exam.report</field>
        <field name="arch" type="xml">
            <form string="Exam Report">
                <sheet>
                 <header>
            <button name="print_report" string="Print Report" type="object" class="btn-primary"/>
          </header>
                    <group>
                        <field name="student_id"/>
                        <field name="exam_id"/>
                        <field name="average_score" readonly="1"/>
                    </group>
                    <group>
                        <field name="result_ids">
                            <list editable="bottom">
                                <field name="subject_id"/>
                                <field name="marks_obtained"/>
                                <field name="grade"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

  



</odoo>
