<odoo>
  <record id="view_exam_list" model="ir.ui.view">
    <field name="name">school.exam.list</field>
    <field name="model">school.exam</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="exam_date"/>
        <field name="academic_year_id"/>
        <field name="class_id"/>
        <field name="section_id"/>
      </list>
    </field>
  </record>

  <record id="view_exam_form" model="ir.ui.view">
    <field name="name">school.exam.form</field>
    <field name="model">school.exam</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="name"/>
          <field name="exam_date"/>
          <field name="academic_year_id"/>
          <field name="class_id"/>
          <field name="section_id"/>
        </group>
      </form>
    </field>
  </record>

    <record id="action_exam" model="ir.actions.act_window">
    <field name="name">Exam</field>
    <field name="res_model">school.exam</field>
    <field name="view_mode">list,form</field>
  </record>


  <!-- Exam Results Action -->
   <!-- list View for Exam Result -->
<record id="view_exam_result_list" model="ir.ui.view">
    <field name="name">school.exam.result.list</field>
    <field name="model">school.exam.result</field>
    <field name="arch" type="xml">
        <list string="Exam Results">
            <field name="student_id"/>
            <field name="exam_id"/>
            <field name="subject_id"/>
            <field name="marks_obtained"/>
            <field name="grade"/>
        </list>
    </field>
</record>

<!-- Form View for Exam Result -->
<record id="view_exam_result_form" model="ir.ui.view">
    <field name="name">school.exam.result.form</field>
    <field name="model">school.exam.result</field>
    <field name="arch" type="xml">
        <form string="Exam Result">
            <group>
                <field name="student_id"/>
                <field name="exam_id"/>
                <field name="subject_id"/>
                <field name="marks_obtained"/>
                <field name="grade"/>
                <field name="report_id"/>
            </group>
        </form>
    </field>
</record>

<!-- Update Action to Use Both Views -->
<record id="action_exam_result" model="ir.actions.act_window">
    <field name="name">Exam Results</field>
    <field name="res_model">school.exam.result</field>
    <field name="view_mode">list,form</field>
</record>


    <!-- Exam Report Action -->
    <record id="action_exam_report" model="ir.actions.act_window">
        <field name="name">Exam Reports</field>
        <field name="res_model">school.exam.report</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Root Menu  -->
    <menuitem id="menu_exam_root" name="Exams" parent="menu_school_root" sequence="10"/>


    <!-- Exam Results Menu -->
    <menuitem id="menu_exam_result" name="Exam Results"
              parent="menu_exam_root"
              action="action_exam_result"
              sequence="20"/>

    <!-- Exam Report Menu -->
    <menuitem id="menu_exam_report" name="Exam Reports"
              parent="menu_exam_root"
              action="action_exam_report"
              sequence="30"/>

</odoo>
